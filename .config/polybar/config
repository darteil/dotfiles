fixed-center = true

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
;line-color = #272828
border-size = 0
;border-color = #fff
padding-left = 2
padding-right = 0
module-margin-left = 0
module-margin-right = 0
underline-size = 0

font-0 = Monospace:size=10;3
font-1 = FontAwesome:size=10;3
font-2 = siji:pixelsize=10;1

;modules-left = 
;modules-center = 
modules-right = demo pulserestart cpu memory

tray-position = left
tray-padding = 0
tray-transparent = true
tray-detached = false
tray-maxsize = 19
tray-scale = 1

wm-restack = i3
override-redirect = false
cursor-click = pointer
cursor-scroll = ns-resize


;########################################################################
;Module - Cpu
;########################################################################


[module/cpu]
