# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
separator_block_width=15
markup=none

# Weather
#
[weather]
command=/home/darteil/.config/i3blocks/scripts/weather
interval=60

# Volume
#
[volume]
command=/home/darteil/.config/i3blocks/scripts/volume "5%" pulse
instance=Master
label=
interval=once
signal=10

# Switcher
[kbd]
label=
interval=1
command=xset -q|grep LED| awk '{ if (substr ($10,5,1) == 1) print "RU\nRU\n#FFFFFF"; else print "EN\nEN\n#FFFFFF"; }'

# Date
#
[date]
command=date '+%d/%m/%Y'
interval=once
label=

# Time
#
[time]
command=date '+%H:%M:%S'
interval=1
label=
