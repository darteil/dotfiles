Xft*antialias:          true
Xft*hinting:            full

Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! === rofi ===

rofi.width: 50
rofi.lines: 15
rofi.columns: 1
rofi.color-enabled: true

! State:           'bg',    'fg',    'bgalt', 'hlbg',  'hlfg'
rofi.color-window: #2F343F, #2F343F, #1e2529
rofi.color-normal: #2F343F, #c1c1c1, #2F343F, #383838, #ffffff
rofi.color-active: #2F343F, #80cbc4, #2F343F, #383838, #80cbc4
rofi.color-urgent: #2F343F, #ff1844, #2F343F, #383838, #ff1844

rofi.separator-style: none
rofi.location: 1
!rofi.padding: 15
rofi.hide-scrollbar: true